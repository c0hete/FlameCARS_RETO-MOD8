<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
</head>
<header>
  <main class="main" id="top">
    <nav class="navbar navbar-expand-lg navbar-light bg-light ">
      <div class="container-fluid ">
        <a class="navbar-brand" href="/"><img src="/img_copy/icons/logo.png" alt="" width="30" /><span class="text-1000 fs-1 ms-2 fw-medium">Flame<span class="fw-bold">CARS</span></span></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li>
              <% if (user) { %>
              <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/dashboard">Perfil</a>
              <% } %>
            </li>
            <li class="nav-item">
              <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/login">Ingresa</a>
            </li>
            <li class="nav-item">
              <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/register">Registrate</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
</header>
<body>
  <div class="container-fluid w-50 d-flex flex-column align-items-center">
      <h2 class="mb-5"> <img src="/img_copy/icons/logo.png" alt="" width="30" />Login</h2> 
    <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger">
        <% errors.forEach(error => { %>
          <div><%= error.message %></div>
        <% }) %>
      </div>
    <% } %>

    <% if(messages.success_msg) { %>
      <div class="alert alert-success"><%= messages.success_msg %></div>
    <% } %>

    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <form class="border border-danger rounded p-3" action="/users/login" method="POST">
      <div class="mb-3 form-group">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
      </div>
      <div class="mb-3 form-group">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-danger btn-block">Login</button>
      </div>
      <div class="text-center mt-3">
        <a href="/users/register" class="text-danger">Register</a>
      </div>
    </form>
  </div>
  <%- include('./partials/scripts.ejs') %>
</body>
</html>