<!DOCTYPE html>
<html lang="en-US" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <main class="main" id="top">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ">
          <a class="navbar-brand" href="/"><img src="/img_copy/icons/logo.png" alt="" width="30" /><span class="text-1000 fs-1 ms-2 fw-medium">Flame<span class="fw-bold">CARS</span></span></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
            <ul class="navbar-nav">
              <li>
                <% if (user) { %>
                <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/dashboard">Perfil</a>
                <% } else { %>
                <li class="nav-item">
                  <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/login">Ingresa</a>
                </li>
                <li class="nav-item">
                  <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/users/register">Registrate</a>
                </li>
                <% } %>
              </li>
              <li class="nav-item">
                <a type="button" class="btn btn-link text-1000 fw-medium order-1 order-lg-0 text-dark" href="/autos">Listado de automóviles</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <body>
        <!-- Main Content -->
        <main class="main" id="top">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <h1 class="mb-3 mx-auto d-block text-center"> <img src="/img_copy/icons/logo.png" alt="" width="40" /> Lista de Autos</h1>

                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Marca</th>
                      <th>Modelo</th>
                      <th>Año</th>
                      <th>Foto</th>
                      <th>Full</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% autos.forEach((auto) => { %>
                      <tr>
                        <td><%= auto.id %></td>
                        <td><%= auto.marca %></td>
                        <td><%= auto.modelo %></td>
                        <td><%= auto.anio %></td>
                        <td>
                          <img src="/autos/<%= auto.id %>/image" alt="Auto" style="width: 100px; height: 100px; object-fit: cover;" />
                        </td>
                        <td>
                          <p>Dueño: <%= auto.propietario_nombre %></p>
                          <button class="btn btn-danger btn-sm" onclick="window.location.href='/autos/<%= auto.id %>/image'">Ver imagen completa</button>

                        </td>
                      </tr>
                    <% }); %>
                    
                 
                  </tbody>
                </table>
                
              </div>
            </div>
          </div>
        </main>
        <%- include('./partials/scripts.ejs') %>

      </body>
    </html>
